{
  "compilerOptions": {
      "target": "esnext",
      "moduleResolution": "node16",
      "module": "Node16",
      "strict": true,
      "esModuleInterop": true,
      "allowImportingTsExtensions": true,
      "noEmit": true,
      "jsx": "react",
      "baseUrl": "./",  
      "paths": {
        "@/components/*": ["src/components/*"],
        "@/context/*": ["src/context/*"]
      }
    },
    "include": ["src/**/*"]  
}
