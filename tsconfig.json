{
  "compilerOptions": {
      "target": "esnext",
      "moduleResolution": "node16",
      "module": "Node16",
      "strict": true,
      "esModuleInterop": true,
      "jsx": "react",  // Add this line
      "baseUrl": "./",  // Optional: Set base URL for module resolution
      "paths": {
        "@/components/*": ["src/components/*"],
        "@/context/*": ["src/context/*"]
      }
    },
    "include": ["src/**/*"]  
}
